<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Upload Menu"
        android:textSize="100px"
        android:textColor="#d3d8e3"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET IMAGES"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="550dp"
        android:elevation="10dp"
        android:textColor="@color/element_white"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:onClick="GetAll"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPLOAD IMAGE"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="650dp"
        android:elevation="10dp"
        android:textColor="@color/element_white"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:onClick="Upload"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET IMAGE BY NAME"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="750dp"
        android:elevation="10dp"
        android:textColor="@color/element_white"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:onClick="GetByName"
        android:gravity="center"/>

</RelativeLayout>